<div class="card card-container">
  <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
  <p id="profile-name" class="profile-name-card"></p>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
    <%= f.email_field :email, autofocus: true, id: 'inputEmail', class: 'form-control', placeholder: 'Email' %>
    <%= f.password_field :password, autocomplete: "off", id: 'inputPassword', class: 'form-control', placeholder: 'Password' %>

    <% if devise_mapping.rememberable? -%>
    <div id="remember" class="checkbox">
      <label>
        <%= f.check_box :remember_me %>Remember me
      </label>
    </div>
    <% end -%>

    <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Sign in</button>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
