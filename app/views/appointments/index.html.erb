<h1>Citas</h1>
<p></p>

<div>
  <table class="table table-bordered table-striped">
    <thead>
    <tr>
      <th>Paciente</th>
      <th>Fecha de la Cita</th>
      <th>Fecha de Creación de la Cita</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @records.each do |p| %>
        <tr>
          <td><%= Pacient.find(p.pacient_id).display_name %></td>
          <td><%= p.appointment_date %></td>
          <td><%= p.created_at %></td>
          <td>
            <%= link_to '', appointment_path(p), class: 'glyphicon glyphicon-eye-open' %>
            <%= link_to '', edit_pacient_path(p), class: 'glyphicon glyphicon-edit' %>
            <%= link_to '', pacient_path(p), class: 'glyphicon glyphicon-trash', confirm: 'Está seguro que desea Eliminar este paciente?' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div>
  <%= link_to 'Nuevo', new_appointment_path, class: 'btn btn-default pull-right' %>
</div>
